<div class="row mt-3">
    <div class="col-3">
        <img class="img-fluid" src="{{product.imageUrl}}">
    </div>

    <div class="col-6">
        <h3 style="font-size:24px; color:#1b1b1b;">{{product.itemName}}</h3>
        <p style="font-size:14px; color:#6c6a74 "> {{ product.description }}</p>        
        <p class="align-content-end mr-2" style="font-size:16px; color:#6c6a74">{{formatNumber product.price style="currency" currency="USD" }}</p>
        <a href="/shop/add-to-cart/{{product._id}}" class="btn btn-outline-dark align-content-end"> <i class="fas fa-cart-plus"></i> Add to cart</a> 
        <hr>
        <div class="details_share">
            <span style="font-size: 1.5em;">Share:</span>
            <ul style="display:inline-block; margin-top: 5px;margin-left: 41px;">
                <li style="display:inline-block; margin-top: 5px;margin-left: 10px;"><a href="#"><i class="fab fa-pinterest fa-2x"></i></a></li>
                <li style="display:inline-block; margin-top: 5px;margin-left: 10px;"><a href="#"><i class="fab fa-instagram fa-2x"></i></a></li>
                <li style="display:inline-block; margin-top: 5px;margin-left: 10px;"><a href="#"><i class="fab fa-facebook fa-2x"></i></a></li>
                <li style="display:inline-block; margin-top: 5px;margin-left: 10px;"><a href="#"><i class="fab fa-twitter-square fa-2x"></i></a></li>
            </ul>
       </div>   
    </div>
</div>

