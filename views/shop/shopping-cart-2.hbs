{{# if products }}
    <div class="row">
        <div class="col-12 mx-auto mt-4"><h3>Shopping Cart</h3></div>
        <div class="col-sm-12">
            <div class="row shopping-cart-description mt-2">
                      <div class="col-5">Item Name</div>
                      <div class="col-4"> Qty </span></div>
                      <div class="col-2">Total</div>
            </div>
        </div>
        <div class="col-sm-12 mx-auto">            
                {{# each products }}
                    <div class="row shopping-cart-items">
                      <div class="col-5" style="color: red">{{ this.item.itemName }}</div>                      
                      <div class="col-4"> <i class="fas fa-minus-circle"></i> {{ this.qty }} <i class="fas fa-plus-circle"></i></></></div>                      
                      <div class="col-2">${{ this.price }}</div>
                    </div>
                    <hr>
                {{/each}}           
        </div>
    </div>
  
    <div class="row">
        <div class="col-sm-12">
            <h3 class="float-right">Total:${{ totalPrice }}</h3>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-12">
            <a href="/shop/checkout" type="button" class="btn btn-success float-right mt-3">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 mx-auto">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}