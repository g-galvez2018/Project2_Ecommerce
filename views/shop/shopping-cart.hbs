{{# if products }}
    <div class="row">
        <div class="col-12 mx-auto mt-4"><h3>Shopping Cart</h3></div>
        <div class="col-sm-12">
            <div class="row shopping-cart-description mt-2">
                      <div class="col-4"></div>
                      <div class="col-4">Item Name</div>
                      <div class="col-2"> Qty </span></div>
                      <div class="col-2">Total</div>
            </div>
        </div>
        <div class="col-sm-12 mx-auto">            
                {{# each products }}
                    <div class="row shopping-cart-items">
                      <div class="col-4"><img class="img-fluid" style="height:80px; width:80px" src="{{ this.item.imageUrl }}"></div>
                      <div class="col-4" style="color:black">{{ this.item.itemName }}</div>                      
                      <div class="col-2"> 
                            <a href="/shop/reduce/{{this.item._id}}" style="color:black"><i class="fas fa-minus-circle"></i></a> {{ this.qty }} 
                            <a href="/shop/add/{{this.item._id}}" style="color:black"><i class="fas fa-plus-circle"></i></a>
                      </div>                      
                      <div class="col-2">{{ formatNumber this.price style="currency" currency="USD" }}</div>
                    </div>
                    <hr>
                {{/each}}           
        </div>
    </div>
  
    <div class="row">
        <div class="col-sm-12">
            <h3 class="float-right">Total:{{ formatNumber totalPrice style="currency" currency="USD" }}</h3>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-12">
            <a href="/shop/checkout" class="btn btn-outline-dark float-right mt-3">Proceed to checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 mx-auto">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}

